<form action="" method="GET">
  <input type="text" name="search" />
  <input type="submit" value="Search">
</form>
<section class="cats">
  <ul>
    {{#each cats}}
    <li>
      <img
        src="{{image}}"
        alt="Black Cat"
      />
      <h3>{{name}}</h3>
      <p><span>Breed: </span>{{breed}}</p>
      <p><span>Description: </span>{{description}}</p>
      <ul class="buttons">
        <li class="btn edit"><a href="cats/details/{{id}}">Change Info</a></li>
        <li class="btn delete"><a href="cats/catShelter/{{id}}">New Home</a></li>
      </ul>
    </li>
    {{/each}}
  </ul>
</section>